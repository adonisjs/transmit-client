{
  "name": "@adonisjs/transmit-client",
  "version": "0.2.0",
  "description": "A client for the native Server-Sent-Event module of AdonisJS.",
  "keywords": [
    "client",
    "sse-client",
    "sse",
    "server-sent-event",
    "adonis",
    "adonisjs",
    "adonis-framework"
  ],
  "license": "MIT",
  "author": "Romain Lanz <romain.lanz@pm.me>",
  "type": "module",
  "source": "src/transmit.ts",
  "main": "./build/transmit.js",
  "types": "./build/transmit.d.ts",
  "scripts": {
    "clean": "del-cli build",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext=.ts",
    "format": "prettier --write .",
    "build": "tsup",
    "release": "npx release-it",
    "version": "npm run build",
    "prepublishOnly": "npm run build",
    "test": "c8 node --loader ts-node/esm --enable-source-maps bin/test.ts"
  },
  "devDependencies": {
    "@adonisjs/eslint-config": "^1.1.7",
    "@adonisjs/prettier-config": "^1.1.7",
    "@adonisjs/tsconfig": "^1.3.0",
    "@japa/assert": "^2.0.0-2",
    "@japa/runner": "^3.0.0-9",
    "@swc/core": "^1.4.11",
    "c8": "^9.1.0",
    "del-cli": "^5.0.0",
    "eslint": "^8.44.0",
    "prettier": "^3.0.0",
    "release-it": "^17.1.1",
    "ts-node": "^10.9.2",
    "tsup": "^8.0.2",
    "typescript": "^5.1.6"
  },
  "files": [
    "src",
    "build"
  ],
  "engines": {
    "node": ">=18.16.0"
  },
  "eslintConfig": {
    "extends": "@adonisjs/eslint-config/package"
  },
  "prettier": "@adonisjs/prettier-config",
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  },
  "tsup": {
    "dts": true,
    "clean": true,
    "format": "esm",
    "sourceMap": true,
    "target": "es2020",
    "outDir": "build",
    "entry": [
      "src/transmit.ts"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore(release): ${version}",
      "tagAnnotation": "v${version}",
      "tagName": "v${version}"
    },
    "github": {
      "release": true,
      "releaseName": "v${version}",
      "web": true
    }
  }
}
